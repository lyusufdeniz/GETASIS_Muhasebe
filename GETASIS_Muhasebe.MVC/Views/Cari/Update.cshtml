@model Cari
@if(ViewBag.Error==true)
{
	<div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>
}
else if (ViewBag.Error==false)
{
	<script>
		 Swal.fire(
		  'Başarılı!',
		  'Kayıt Düzenlendi',
		  'success'
		)
	</script>
}
<div class="col-xxl">
	<div class="card mb-4">
		<div class="card-header d-flex align-items-center justify-content-between">
			<h5 class="mb-0">Cari Düzenleme</h5>
			
		</div>
		<div class="card-body">
			<form asp-action="Update" asp-controller="Cari" method="post">
				<div class="row mb-3">
					<label class="col-sm-2 col-form-label" for="basic-icon-default-fullname">Cari Adı</label>
					<div class="col-sm-10">
						<div class="input-group input-group-merge">
							<span id="basic-icon-default-fullname2" class="input-group-text">
								<i class="bi bi-hash"></i>
							</span>
							<input type="text"
								   class="form-control"
								   id="name"
								   placeholder="Cari Ad Giriniz"
								   
								   aria-describedby="basic-icon-default-fullname2"
								   name="Ad" 
								   asp-for="Ad"
								   
								   />
						</div>
					</div>
				</div>
				<div class="row mb-3">
					<label class="col-sm-2 col-form-label" for="basic-icon-default-fullname">Cari Adı Soyadı</label>
					<div class="col-sm-10">
						<div class="input-group input-group-merge">
							<span id="basic-icon-default-fullname2" class="input-group-text">
								<i class="bi bi-person"></i>
							</span>
							<input type="text"
								   class="form-control"
								   id="name"
								   name="AdSoyad"
								   placeholder="Cari Ad Soyad Giriniz"
								
								   aria-describedby="basic-icon-default-fullname2" 
								   asp-for="AdSoyad"

								   
								   />
						</div>
					</div>
				</div>
				<div class="row mb-3">
					<label class="col-sm-2 col-form-label" for="basic-icon-default-fullname">Cari Mail</label>
					<div class="col-sm-10">
						<div class="input-group input-group-merge">
							<span id="basic-icon-default-fullname2" class="input-group-text">
								<i class="bi bi-envelope"></i>
							</span>
							<input type="email"
								   class="form-control"
								   id="mail"
								   name="Mail"
								   placeholder="Cari Mail Giriniz"
								   aria-label="John Doe"
								   aria-describedby="basic-icon-default-fullname2"
								    asp-for="Mail"
								   />
								   
						</div>
					</div>
				</div>
				<div class="row mb-3">
					<label class="col-sm-2 col-form-label" for="basic-icon-default-fullname">Vergi Dairesi</label>
					<div class="col-sm-10">
						<div class="input-group input-group-merge">
							<span id="basic-icon-default-fullname2" class="input-group-text">
								<i class="bi bi-house"></i>
							</span>
							<input type="text"
								   class="form-control"
								   id="vd"
								   name="VergiDairesi"
								   placeholder="Vergi Dairesi Giriniz"
								   aria-label="John Doe"
								   aria-describedby="basic-icon-default-fullname2"
								     asp-for="VergiDairesi"
								   />
								  
						</div>
					</div>
				</div>
				<div class="row mb-3">
					<label class="col-sm-2 col-form-label" for="basic-icon-default-fullname">Vergi Numarası</label>
					<div class="col-sm-10">
						<div class="input-group input-group-merge">
							<span id="basic-icon-default-fullname2" class="input-group-text">
								<i class="bi bi-123"></i>
							</span>
							<input type="text"
								   class="form-control"
								   id="vn"
								   name="VergiNo"
								   placeholder="Vergi No Giriniz"
								   aria-describedby="basic-icon-default-fullname2" 
								   asp-for="VergiNo"
								   />
						</div>
					</div>
				</div>
				<div class="row mb-3">
					<label class="col-sm-2 col-form-label" for="basic-icon-default-fullname">Adres</label>
					<div class="col-sm-10">
						<div class="input-group input-group-merge">
							<span id="basic-icon-default-fullname2" class="input-group-text">
								<i class="bi bi-compass"></i>
							</span>
							<input type="text"
								   class="form-control"
								   id="inputAddress"
								   name="Adres"
								   placeholder="Cari Adresi Giriniz"
								   aria-describedby="basic-icon-default-fullname2"
								    asp-for="Adres"
								   />
						</div>
					</div>
				</div>

				<div class="row justify-content-end">
					<div class="col-sm-10">
						<button type="submit" class="btn btn-primary">Güncelle</button>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>


