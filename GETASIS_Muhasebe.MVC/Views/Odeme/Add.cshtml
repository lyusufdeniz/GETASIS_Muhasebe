@model Odeme
@if (ViewBag.Error == true)
{
	<div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>
}
else if (ViewBag.Error == false)
{
	<script>
		 Swal.fire(
		  'Başarılı!',
		  'Kayıt Eklendi',
		  'success'
		)
	</script>
}

<div class="col-xxl">
	<div class="card mb-4">
		<div class="card-header d-flex align-items-center justify-content-between">
			<h5 class="mb-0">Yeni Kayıt</h5>
			@*<small class="text-muted float-end">Cari Kaydı</small>*@
		</div>
		<div class="card-body">
			<form asp-action="Add" asp-controller="Odeme" method="post">
				<div class="row mb-3">
					<label class="col-sm-2 col-form-label" for="odemedropdown">Ödeme Türü</label>
					<div class="col-sm-10">
						<div class="input-group input-group-merge">
							<span id="basic-icon-default-fullname2" class="input-group-text">
								<i class="bi bi-list-ol"></i>
							</span>
							<select name="OdemeTipId" class="form-select" id="odemedropdown" asp-for=OdemeTipId asp-items=ViewBag.Tur>
							</select>
						</div>
					</div>
				</div>
								<div class="row mb-3">
					<label class="col-sm-2 col-form-label" for="hesapdropdown">Hesap</label>
					<div class="col-sm-10">
						<div class="input-group input-group-merge">
							<span id="basic-icon-default-fullname2" class="input-group-text">
								<i class="bi bi-bank"></i>
							</span>

							<select name="HesapId" class="form-select" id="hesapdropdown" asp-for=HesapId asp-items=ViewBag.Hesap>
							</select>
						</div>
					</div>
				</div>
				<div class="row mb-3">
					<label class="col-sm-2 col-form-label" for="caridropdown">Cari</label>
					<div class="col-sm-10">
						<div class="input-group input-group-merge">
							<span id="basic-icon-default-fullname2" class="input-group-text">
								<i class="bi bi-people"></i>
							</span>
							<select name="CariId" class="form-select" id="caridropdown" asp-for=CariId asp-items=ViewBag.Cari>
							</select>
						</div>
					</div>
				</div>
				<div class="row mb-3">
					<label class="col-sm-2 col-form-label" for="basic-icon-default-fullname">Alacak</label>
					<div class="col-sm-10">
						<div class="input-group input-group-merge">
							<span id="basic-icon-default-fullname2" class="input-group-text">
								<i class="bi bi-plus-lg"></i>
							</span>
							<input type="number" min="0" step="any"
								   class="form-control"
								   id="name"
								  
								   placeholder="Alacak Tutar Giriniz"
								   aria-describedby="basic-icon-default-fullname2"
								   name="Alacak"
								   
								   asp-for="Alacak"
								   value="@ViewBag.Alacak" 
								   />
						</div>
					</div>
				</div>
				<div class="row mb-3">
					<label class="col-sm-2 col-form-label" for="basic-icon-default-fullname">Borç</label>
					<div class="col-sm-10">
						<div class="input-group input-group-merge">
							<span id="basic-icon-default-fullname2" class="input-group-text">
								<i class="bi bi-dash-lg"></i>
							</span>
							<input type="number" min="0" step="any"
								   class="form-control"
								   id="name"
								   
								   name="Borc"
							
								   placeholder="Borç Tutar Giriniz"
								   aria-describedby="basic-icon-default-fullname2"
								   asp-for="Borc"
								   value="@ViewBag.Borc" />
						</div>
					</div>
				</div>
				<div class="row mb-3">
					<label class="col-sm-2 col-form-label" for="basic-icon-default-fullname">Tarih</label>
					<div class="col-sm-10">
						<div class="input-group input-group-merge">
							<span id="basic-icon-default-message2" class="input-group-text">
								<i class="bi bi-calendar-event"></i>
							</span>
							<input type="date"

								   class="form-control"
								   id="Tarih"
								   name="Tarih"
								   aria-describedby="basic-icon-default-fullname2"
								   value="@ViewBag.CurrentDate"
								   asp-for="Tarih"
								   />

						</div>
					</div>
				</div>
				<div class="row mb-3">
					<label class="col-sm-2 col-form-label" for="basic-icon-default-fullname">Vade Tarihi</label>
					<div class="col-sm-10">
						<div class="input-group input-group-merge">
							<span id="basic-icon-default-message2" class="input-group-text">
								<i class="bi bi-calendar-event"></i>
							</span>
							<input type="date"
								   class="form-control"
								   id="VadeTarihi"
								   name="VadeTarihi"
								   aria-describedby="basic-icon-default-fullname2"
								   asp-for="VadeTarihi"
								    />

						</div>
					</div>
				</div>
				<div class="row mb-3">
					<label class="col-sm-2 col-form-label" for="basic-icon-default-fullname">Belge No</label>
					<div class="col-sm-10">
						<div class="input-group input-group-merge">
							<span id="basic-icon-default-fullname2" class="input-group-text">
								<i class="bi bi-file-binary"></i>
							</span>
							<input type="text"
								   class="form-control"
								   id="BelgeNo"
								   name="BelgeNo"
								   placeholder="Belge No Giriniz"
								   aria-describedby="basic-icon-default-fullname2"
								   asp-for="BelgeNo" />

						</div>
					</div>
				</div>
				<div class="row mb-3">
					<label class="col-sm-2 col-form-label" for="basic-icon-default-fullname">Açıklama</label>
					<div class="col-sm-10">
						<div class="input-group input-group-merge">
							<span id="basic-icon-default-fullname2" class="input-group-text">
								<i class="bi bi-info-square"></i>
							</span>
							<input type="text"
								   class="form-control"
								   id="vn"
								   name="Aciklama"
								   placeholder="Açıklama Giriniz"
								   aria-describedby="basic-icon-default-fullname2"
								   asp-for="Aciklama" />
						</div>
					</div>
				</div>

				<div class="row justify-content-end">
					<div class="col-sm-10">
						<button type="submit" class="btn btn-primary">Ödeme Kaydet</button>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>


